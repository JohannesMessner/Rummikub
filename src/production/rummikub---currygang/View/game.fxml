<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane fx:id="root"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GameController">
    <top>
        <!-- timer, opponentMid's hand, menu buttons -->
        <GridPane fx:id="topGrid" BorderPane.alignment="CENTER">
            <!-- 3x1 grid for layout -->
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <children>
                <StackPane alignment="CENTER_LEFT" prefHeight="150.0" prefWidth="200.0">
                    <!-- Timer, left aligned -->
                    <children>
                        <Text fx:id="timer" strokeType="OUTSIDE" strokeWidth="0.0" text="Timer: 30" />
                    </children>
                </StackPane>

                <!-- opponentMid's hand -->
                <fx:include fx:id="opponentMid" source="OpponentHand.fxml" GridPane.columnIndex="1"/>

                <StackPane alignment="CENTER_RIGHT" prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="2">
                    <!-- menu buttons -->
                    <children>
                        <Button fx:id="quitButton" mnemonicParsing="false" text="Quit" onMouseClicked="#constructGrid"/>
                    </children>
                </StackPane>
            </children>
        </GridPane>
    </top>

    <center>
        <!-- table grid -->
        <GridPane fx:id="table" BorderPane.alignment="CENTER">
            <columnConstraints>
                <!-- Add columns via Java with tag=ColumnConstraints -->
            </columnConstraints>
            <rowConstraints>
                <!-- Add row via Java with tag=RowConstraints -->
            </rowConstraints>
            <children>
                <!-- Position elements with GridPane.columnIndex="x" GridPane.rowIndex="y" -->
            </children>
        </GridPane>
    </center>

    <left>
        <!-- opponentLeft's hand -->
        <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER_LEFT">
            <fx:include fx:id="opponentLeft" source="OpponentHand.fxml" />
        </StackPane>
    </left>

    <right>
        <!-- opponentRight's hand -->
        <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER_RIGHT">
            <fx:include fx:id="opponentRight" source="OpponentHand.fxml" />
        </StackPane>
    </right>

    <bottom>
        <!-- ownHand, drawStone button etc. -->
        <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <VBox fx:id="ownHand" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" maxWidth="400">
                    <!-- hand of executing player -->
                    <children>
                        <Text fx:id="playerInfo" strokeType="OUTSIDE" strokeWidth="0.0" text="player: stone count" />
                        <GridPane fx:id="handGrid" styleClass="hand" alignment="CENTER_LEFT">
                            <!-- Own hand -->
                            <columnConstraints>
                                <ColumnConstraints />
                                <ColumnConstraints />
                                <ColumnConstraints />
                                <ColumnConstraints />
                                <ColumnConstraints />
                                <ColumnConstraints />
                                <ColumnConstraints />
                                <ColumnConstraints />
                                <!-- Add columns via Java with tag=ColumnConstraints -->
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                                <!-- Add row via Java with tag=RowConstraints -->
                            </rowConstraints>
                            <children>
                            </children>
                        </GridPane>
                    </children>
                </VBox>

                <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                    <!-- drawStone buttons etc. -->
                    <children>
                        <Button fx:id="drawButton" mnemonicParsing="false" text="Draw stone" onMouseClicked="#drawStone"/>
                        <Button fx:id="undoButton" mnemonicParsing="false" text="Undo" onMouseClicked="#nameChange"/>
                    </children>
                </HBox>
            </children>
        </StackPane>
    </bottom>
</BorderPane>