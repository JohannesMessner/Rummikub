<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="root"
           xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="view.StartController"
           stylesheets="@/view/startStyle.css">
   <children>
       <AnchorPane fx:id="errorPane">
           <children>
               <Label layoutX="252.0" layoutY="64.0" text="Error!" textFill="#d01818">
                   <font>
                       <Font size="36.0" />
                   </font>
               </Label>
               <Text fx:id="errorMessage" layoutX="70.0" layoutY="182.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" textAlignment="CENTER" wrappingWidth="459.2060546875">
                   <font>
                       <Font size="14.0" />
                   </font>
               </Text>
               <Button fx:id="okButton" layoutX="281.0" layoutY="299.0" mnemonicParsing="false" text="OK" onMouseClicked="#handleOkButton"/>
           </children>
       </AnchorPane>
       <StackPane fx:id="vContainer">
           <children>
               <StackPane fx:id="header">
                   <children>
                       <Text fx:id="title" styleClass="whiteText" text="Rummikub" />
                   </children>
               </StackPane>
               <VBox fx:id="content">
                   <children>
                       <VBox styleClass="inputArea">
                           <children>
                               <Text text="Name:" styleClass="whiteText" />
                               <TextField fx:id="nameField" />
                               <Text fx:id="nameERROR" style="-fx-background-color: #ff0022;" text="Error! You must choose a username" visible="false"/>
                           </children>
                       </VBox>
                       <VBox styleClass="inputArea">
                           <children>
                               <Text text="Age:" styleClass="whiteText" />
                               <TextField fx:id="ageField" />
                               <Text fx:id="ageERROR" style="-fx-background-color: #ff0022;" text="Error! Age has to be a number" visible="false"/>
                           </children>
                       </VBox>
                       <HBox styleClass="buttonArea">
                           <children>
                               <Button text="Host" onMouseClicked="#hostGame" />
                               <Text text="or" styleClass="whiteText" />
                           </children>
                       </HBox>
                       <VBox styleClass="inputArea">
                           <children>
                               <Text text="IP address:" styleClass="whiteText"/>
                               <TextField fx:id="ipField" text="localhost" />
                               <Text fx:id="ipERROR" style="-fx-background-color: #ff0022;" text="Error! Wrong IP Address" visible="false"/>
                           </children>
                       </VBox>
                       <HBox styleClass="buttonArea">
                           <children>
                               <Button text="Join" onMouseClicked="#joinGame" />
                           </children>
                       </HBox>
                   </children>
               </VBox>
               <StackPane fx:id="footer" pickOnBounds="false">
                   <children>
                       <Text text="brought to you by the Curry Gang" styleClass="whiteText" />
                   </children>
               </StackPane>
           </children>
       </StackPane>
   </children>
</StackPane>
