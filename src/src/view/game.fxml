<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root"
           xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="view.GameController"
           stylesheets="@/view/gameStyle.css">
  <children>
    <!-- Top area: timer, mid opponent's hand, quit button -->
    <StackPane fx:id="top" alignment="TOP_CENTER">
      <children>
        <StackPane alignment="TOP_CENTER">
          <children>
            <!-- timer -->
            <HBox alignment="CENTER_LEFT" styleClass="onEdge" spacing="15">
              <children>
                <Text fx:id="timerDescription" text="Timer:"/>
                <Text fx:id="timer" text="60"/>
              </children>
            </HBox>

            <!-- mid opponent's hand -->
            <HBox fx:id="opponentMid" styleClass="hand, opponentHand, shadow"
                  alignment="BOTTOM_CENTER">
              <children>
                <Text fx:id="midPlayerName" styleClass="whiteText"
                       text="x"/>
                <Text fx:id="midPlayerHand" styleClass="whiteText"
                       text="x"/>
              </children>
            </HBox>

            <!-- Menu buttons -->
            <StackPane alignment="TOP_RIGHT" styleClass="onEdge">
              <children>
                <Button fx:id="quitGame" mnemonicParsing="false"
                        text="Quit" onMouseClicked="#quitGame"/>
              </children>
            </StackPane>
          </children>
        </StackPane>
      </children>
    </StackPane>

    <!-- Mid area: table & left/right opponent's hands-->
    <StackPane fx:id="middle" alignment="CENTER">
      <children>
        <!-- Left area: left opponent's hand -->
        <StackPane fx:id="leftContainer" alignment="CENTER_LEFT">
          <children>
            <!-- left opponent's hand -->
            <HBox fx:id="opponentLeft" styleClass="hand, opponentHand, shadow">
              <children>
                <Text fx:id="leftPlayerName" styleClass="whiteText"
                       text="x"/>
                <Text fx:id="leftPlayerHand" styleClass="whiteText" text="x"/>
              </children>
            </HBox>
          </children>
        </StackPane>

        <!-- Right area: right opponent's hand -->
        <StackPane fx:id="rightContainer" alignment="CENTER_RIGHT">
          <children>
              <!-- right opponent's hand -->
              <HBox fx:id="opponentRight" styleClass="hand, opponentHand, shadow">
                <children>
                  <Text fx:id="rightPlayerName" styleClass="whiteText" text="x"/>
                  <Text fx:id="rightPlayerHand" styleClass="whiteText" text="x"/>
                </children>
              </HBox>
          </children>
        </StackPane>

        <!-- Central area: table -->
        <StackPane fx:id="tableContainer" alignment="CENTER">
          <children>
            <VBox fx:id="errorPane" visible="false">
              <children>
                <Label layoutX="252.0" layoutY="64.0" text="-Error-"
                       textFill="#d01818">
                  <font>
                    <Font size="36.0"/>
                  </font>
                </Label>
                <Text fx:id="errorMessage" layoutX="70.0"
                      layoutY="182.0" strokeType="OUTSIDE"
                      strokeWidth="0.0" text="Text"
                      textAlignment="CENTER"
                      wrappingWidth="459.2060546875">
                  <font>
                    <Font size="36.0"/>
                  </font>
                </Text>
                <Button fx:id="okButton" layoutX="281.0" layoutY="299.0"
                        mnemonicParsing="false" text="OK"
                        onMouseClicked="#handleOkButton"/>
              </children>
            </VBox>
            <!-- table grid -->
            <GridPane fx:id="tableGrid" alignment="CENTER">
              <children>
                <!-- Position elements with GridPane.columnIndex="x" GridPane.rowIndex="y" -->
              </children>
            </GridPane>
          </children>
        </StackPane>
      </children>
    </StackPane>

    <!-- Bottom area: ownHand, drawStone button etc. -->
    <StackPane fx:id="bottom" alignment="BOTTOM_CENTER">
      <children>
        <StackPane pickOnBounds="false">
          <children>
            <VBox alignment="BOTTOM_RIGHT" styleClass="onEdge" spacing="25">
              <children>
                <HBox alignment="BOTTOM_RIGHT" spacing="10">
                  <children>
                    <Button fx:id="drawButton" text="Draw stone"
                            onMouseClicked="#drawStone"/>
                    <Button fx:id="resetButton" text="Reset"
                            onMouseClicked="#sendResetRequest"/>
                    <Button fx:id="checkButton" text="Check"
                            onMouseClicked="#sendConfirmMoveRequest"/>
                  </children>
                </HBox>
                <HBox alignment="BOTTOM_RIGHT" spacing="10">
                  <!-- drawStone buttons etc. -->
                  <children>
                    <Button fx:id="sortHandByGroupButton" text="Group"
                            onMouseClicked="#sendSortHandByGroupRequest"/>
                    <Button fx:id="sortHandByRunButton" text="Run"
                            onMouseClicked="#sendSortHandByRunRequest"/>
                    <Button fx:id="testRankButton" text="testRank" onMouseClicked="#showRank"/>
                  </children>
                </HBox>
              </children>
            </VBox>

            <VBox fx:id="ownBoard" styleClass="shadow" alignment="TOP_CENTER">
              <!-- hand of executing player -->
              <children>
                <Text fx:id="ownName" styleClass="whiteText" text="x"/>
                <Text fx:id="ownHand" styleClass="whiteText" text="x"/>
                <GridPane fx:id="handGrid" styleClass="hand"
                          alignment="CENTER">
                  <!-- Own hand -->
                  <columnConstraints>
                    <!-- Add columns via Java with tag=ColumnConstraints -->
                  </columnConstraints>
                  <rowConstraints>
                    <!-- Add row via Java with tag=RowConstraints -->
                  </rowConstraints>
                  <children>

                  </children>
                </GridPane>
              </children>
            </VBox>
          </children>
        </StackPane>
      </children>
    </StackPane>
  </children>
</VBox>